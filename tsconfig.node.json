{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "internal/**/*",
    "internal/**/*.json",
    "scripts/**/*",
    "packages/theme-chalk/*",
    "packages/pro-design-vue/version.ts",
    "packages/pro-design-vue/package.json"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  },
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
