{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": false, //暂时定义为false
    "noUnusedParameters": false, //暂时定义为false
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "preserveSymlinks": true,
    "composite": true,
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES2021.String"],
    "skipLibCheck": true,
    "paths": {
      "vue-types": ["node_modules/vue-types"],
      "csstype": ["node_modules/csstype"],
      "@vue/shared": ["node_modules/@vue/shared"],
      "scroll-into-view-if-needed": ["node_modules/scroll-into-view-if-needed"],
      "@pro-design-vue/components": ["packages/components"],
      "@pro-design-vue/components/*": ["packages/components/*"],
      "@pro-design-vue/utils": ["packages/utils"],
      "@pro-design-vue/utils/*": ["packages/utils/*"],
      "@pro-design-vue/hooks": ["packages/hooks"],
      "@pro-design-vue/directives": ["packages/directives"],
      "@pro-design-vue/constants": ["packages/constants"],
      "pro-design-vue": ["packages/pro-design-vue"]
    }
  },
  "include": ["packages", "typings/env.d.ts"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}
